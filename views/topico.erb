<html>
  <body>
    <%= erb :navbar %>
    <% unless @topic.nil? %>
      <h1>Tópico - <%= @topic[:titulo] %></h1>
        <ul>
          <% @messages.each do |m| %>
            <% m.each do |key, value| %>
              <li><b><%= key %></b>: <%= value %></li>
            <% end %>
          <% end %>
        </ul>
    <% else %>
      <h1>Tópico não encontrado</h1>
    <% end %>
    <a href="/">Home</a>
  </body>
</html>